<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe" Height="350" Width="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- 3x3 Buttons -->
        <Button x:Name="B0" FontSize="32" Click="ButtonClick" Grid.Row="0" Grid.Column="0"/>
        <Button x:Name="B1" FontSize="32" Click="ButtonClick" Grid.Row="0" Grid.Column="1"/>
        <Button x:Name="B2" FontSize="32" Click="ButtonClick" Grid.Row="0" Grid.Column="2"/>

        <Button x:Name="B3" FontSize="32" Click="ButtonClick" Grid.Row="1" Grid.Column="0"/>
        <Button x:Name="B4" FontSize="32" Click="ButtonClick" Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="B5" FontSize="32" Click="ButtonClick" Grid.Row="1" Grid.Column="2"/>

        <Button x:Name="B6" FontSize="32" Click="ButtonClick" Grid.Row="2" Grid.Column="0"/>
        <Button x:Name="B7" FontSize="32" Click="ButtonClick" Grid.Row="2" Grid.Column="1"/>
        <Button x:Name="B8" FontSize="32" Click="ButtonClick" Grid.Row="2" Grid.Column="2"/>

        <!-- Reset Button -->
        <Button Content="Reset" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
                Height="40" Margin="0,10,0,0" Click="ResetGame"/>
    </Grid>
</Window>
